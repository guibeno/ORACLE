SELECT * FROM  hr.departments;

SELECT COUNTRY_NAME FROM HR.COUNTRIES;

SELECT AVG(salary) as media_salarial,
MAX(salary) as MAIOR_SALARIO,
MIN(salary) as MENOR_SALARY
FROM hr.EMPLOYEES;


SELECT r.REGION_NAME AS NOME_DA_REGIAO, COUNT(*) AS CONTADOR
FROM HR.COUNTRIES c
INNER JOIN HR.REGIONS r ON c.REGION_ID = r.REGION_ID
GROUP BY r.REGION_NAME
ORDER BY COUNT(*) ASC
FETCH FIRST 10 ROW ONLY;
